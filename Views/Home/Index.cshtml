
@model CanteenArduinoProject.Data.User
@{ 
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4" id="data">Welcome @Model.FirstName @Model.LastName</h1>
    <br /><br />
    @Html.ActionLink("Сканирай карта за обяд", "Waiting", "Home", null, new { @class = "w-30 btn btn-primary btn-lg" })
</div>
 
<br /><br /><br /><br />

@if(Model.Id != null)
{
    @using (Html.BeginForm("ChooseDay", "Home", FormMethod.Post))
    {
        <div class="position-absolute top-50 start-50 translate-middle">
            <div class="btn-toolbar" role="toolbar">
                <div class="btn-group me-4" role="group">
                    <button type="submit" class="btn btn-outline-primary" name="day" value="1">Понеделник</button>
                </div>
                <div class="btn-group me-4" role="group">
                    <button type="submit" class="btn btn-outline-primary" name="day" value="2">Вторник</button>
                </div>
                <div class="btn-group me-4" role="group">
                    <button type="submit" class="btn btn-outline-primary" name="day" value="3">Сряда</button>
                </div>
                <div class="btn-group me-4" role="group">
                    <button type="submit" class="btn btn-outline-primary" name="day" value="4">Четвъртък</button>
                </div>
                <div class="btn-group me-4" role="group">
                    <button type="submit" class="btn btn-outline-primary" name="day" value="5">Петък</button>
                </div>
            </div>
        </div>
    }
}