@model CanteenArduinoProject.Data.User

@{
    ViewData["Title"] = "Sign-up";
}

<h1>Регистрация в системата</h1>

@using (Html.BeginForm("SignUp", "Home", FormMethod.Post))
{
    @Html.LabelFor(model => model.FirstName,"Име", new { @class = "form-label"})
    @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control col-6"})
    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger"})

    <br />
    @Html.LabelFor(model => model.LastName,"Фамилия", new { @class = "form-label"})
    @Html.TextBoxFor(model => model.LastName, new { @class = "form-control col-6"})
    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger"})

    <br />
    @Html.LabelFor(model => model.Username,"Потребителско име", new { @class = "form-label"})
    @Html.TextBoxFor(model => model.Username, new { @class = "form-control col-6"})
    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger"})

    <br />
    @Html.LabelFor(model => model.FirstName,"Парола", new { @class = "form-label"})
    @Html.PasswordFor(model => model.Password, new { @class = "form-control"})
    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger"})

    <br />
    <button type="submit" class="btn btn-primary">Регистрация</button>
}